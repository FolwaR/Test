vpath %.cpp src
vpath %.h include

bd=build
CC=g++
std=c++11
prog_name=program

.PHONY: all

all: $(prog_name)

$(prog_name): $(bd)/hangman.o 
	@$(CC) --std=$(std) $(^) -o $(@)
	@echo 'Wygenerowano plik Makefile ;)'


$(bd)/hangman.o: hangman.cpp
	@mkdir -p $(bd)
	@$(CC) --std=$(std) -I include -c $(<) -o $(@)

.PHONY: clean
clean:
	@echo "Usówam program ..."
	@rm -r -f $(bd)
	@rm -f $(prog_name)
	@echo "Program usunięty"


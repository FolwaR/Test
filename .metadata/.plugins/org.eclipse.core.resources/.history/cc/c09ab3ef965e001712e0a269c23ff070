

#include <iostream>
using namespace std;

int fill_array(double *tab, const int size);
void show_array(const double *tab, const int size);

int main()
{
	const int MAX = 10;
	int ile_bylo = 0;
	double my_array[MAX];

	cout << "Calling fill array function! "<<endl;

	ile_bylo = fill_array(my_array, MAX);

	return 0;
}

int fill_array(double *tab, const int size)
{
	int ile_elementow = 0;
	int value = 0;

	cout << "Prosze o podanie " <<ile_elementow <<" elementu: ";
	while((cin>>value) && (ile_elementow < size-1))
	{
		ile_elementow++;
		cout << "Prosze o podanie " <<ile_elementow <<" elementu: ";
		*(tab + ile_elementow) = value;
	}


	return ile_elementow;
}


void show_array(const double *tab, const int size)
{
}
